<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RD Bookshop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column" style="min-height: 100vh;">

    <!-- Main Header -->
    <header class="bg-primary text-white p-3 mb-4">
        <div class="container">
            <h1>RD Bookshop</h1>
            <nav>
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Books")">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Categories")">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Authors")">Authors</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main content area -->
    <div class="container flex-grow-1">
        <div class="row">
            <!-- Sidebar (Optional) -->
            <div class="col-md-3">
                <h3>Categories</h3>
                <ul class="list-group">

                    <li class="list-group-item">
                        <a href="@Url.Action("Index", "Books")">All Books</a>
                    </li>

                    @foreach (var category in ViewBag.Categories as List<Category>)
                    {
                        <li class="list-group-item">
                            <a href="@Url.Action("Index", "Books", new { categoryId = category.Id })">@category.Name</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                @RenderBody() <!-- This renders the content of each individual page -->
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2025 RD Bookshop | All Rights Reserved</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false) <!-- This will render custom scripts defined in specific views -->
</body>
</html>